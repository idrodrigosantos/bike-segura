@model BikeSegura.Models.Imagens

@{
    ViewBag.Title = "Detalhes Imagem";
    Layout = "~/Views/Shared/_Usuario.cshtml";
}

<div class="container conteudo">
    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Bicicletas.Marcas)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Bicicletas.Modelo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Bicicletas.Id)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Imagem)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        @Html.DisplayFor(model => model.Bicicletas.Marcas.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.Bicicletas.Modelo)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.Bicicletas.Id)
                    </td>
                    <td>                        
                        <img src="~/Uploads/@Html.DisplayFor(model =>model.Imagem)" style="height:140px;width:200px;" />
                    </td>
                    <td>
                        <div class="btn" role="group">
                            @using (Html.BeginForm())
                            {
                                <a class="btn btn-success" href="@Url.Action("ListaUsuario", "Imagens")" role="button">
                                    <i class="fas fa-reply"></i>
                                    Voltar
                                </a>
                                <a class="btn btn-primary" href="@Url.Action("Edit", "Imagens", new { id = Model.Id })" role="button">
                                    <i class="fas fa-pen"></i>
                                    Editar
                                </a>
                            }
                        </div>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
