@{
    ViewBag.Title = "Esqueceu Senha";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container conteudo">
        <form>
            <div class="row">
                <div class="form-group col-md-8 offset-md-2 col-lg-6 offset-lg-3">
                    <h4>Confirme suas Informações</h4>
                    <p>Será enviado um e-mail para você com um código de validação.</p>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-8 offset-md-2 col-lg-6 offset-lg-3">
                    <label>E-mail (*)</label>
                    <input type="email" class="form-control" id="email" name="email" placeholder="nome@email.com" required="required">
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-8 offset-md-2 col-lg-6 offset-lg-3">
                    <label>CPF (*)</label>
                    <input type="text" class="form-control cpfmask" id="cpf" value="" name="cpf" required="required">
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-8 offset-md-2 col-lg-6 offset-lg-3">
                    <button type="submit" class="btn btn-success btn-lg btn-block">
                        <i class="fas fa-check"></i>
                        Enviar
                    </button>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-sm-6 offset-sm-3">
                    @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })
                </div>
            </div>
        </form>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jquerymask")
    <script>
        $(document).ready(function () {
            $('.cpfmask').mask('000.000.000-00', { placeholder: "000.000.000-00" });
        });
    </script>
}