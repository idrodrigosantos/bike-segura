@model IEnumerable<BikeSegura.Models.Historicos>

@{
    ViewBag.Title = "Lista de Históricos de Bicicletas";
    Layout = "~/Views/Shared/_Usuario.cshtml";
}

<div class="container conteudo">
    <p>
        <a class="btn btn-success" href="@Url.Action("Create", "Historicos" )" role="button">
            <i class="fas fa-plus"></i>
            Cadastrar Histórico da Bicicleta
        </a>
    </p>
    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Bicicletas.Marcas.Nome)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Bicicletas.Modelo)
                    </th>
                    <th>
                        Vendedor
                    </th>
                    <th>
                        Comprador
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TipoTransferencia)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DataAquisicao)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DataTransferencia)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Bicicletas.Marcas.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Bicicletas.Modelo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Vendedor.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Comprador.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TipoTransferencia)
                        </td>
                        <td>
                            @item.DataAquisicao.ToString("dd/MM/yyyy")
                        </td>
                        <td>
                            @item.DataTransferencia.ToString("dd/MM/yyyy")
                        </td>
                        <td>
                            <div class="btn" role="group">
                                <a class="btn btn-success" href="@Url.Action("Details", new { id = item.Id })" role="button">
                                    <i class="fas fa-list"></i>
                                    Detalhes
                                </a>
                                <a class="btn btn-primary" href="@Url.Action("Edit", new { id = item.Id })" role="button">
                                    <i class="fas fa-pen"></i>
                                    Editar
                                </a>
                                <a class="btn btn-danger" href="@Url.Action("Delete", new { id = item.Id })" role="button">
                                    <i class="fas fa-times"></i>
                                    Excluir
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
