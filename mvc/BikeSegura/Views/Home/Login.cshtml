@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-group rx-form-group">
        <div class="col-md-12 col-sm-12 form-group">
            <i class="fa fa-envelope select"></i>
            <input type="email" placeholder="E-mail" required="required" class="form-control" id="email" value="" name="email"><br />
        </div>
        <div class="col-md-12 col-sm-12 form-group">
            <i class="fa fa-unlock-alt"></i>
            <input type="password" placeholder="Senha" required="required" class="form-control" id="senha" value="" name="senha"><br />
        </div>
    </div>
    <div class="col-md-12 col-xs-12 form-group">
        <button class="btn btn-default" type="submit">Acessar</button>
    </div>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
}
