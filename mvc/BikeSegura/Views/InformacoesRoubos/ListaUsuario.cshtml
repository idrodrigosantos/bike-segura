@model IEnumerable<BikeSegura.Models.InformacoesRoubos>

@{
    ViewBag.Title = "Lista de Informações de Roubos";
    Layout = "~/Views/Shared/_Usuario.cshtml";
}

<div class="container conteudo">
    <p>
        <a class="btn btn-success" href="@Url.Action("Create", "InformacoesRoubos" )" role="button">
            <i class="fas fa-plus"></i>
            Informações de Roubo
        </a>
    </p>
    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Cidade)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Estado)
                    </th>
                    <th>
                        Informações adicionais sobre o local
                    </th>
                    <th>
                        Marca
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Bicicletas.Modelo)
                    </th>                    
                    <th>
                        @Html.DisplayNameFor(model => model.DataRoubo)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Cidade)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Estado)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LocalAdicional)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Bicicletas.Marcas.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Bicicletas.Modelo)
                        </td>                        
                        <td>
                            @item.DataRoubo.ToString("dd/MM/yyyy")
                        </td>
                        <td>
                            <div class="btn" role="group">
                                <a class="btn btn-success" href="@Url.Action("Details", new { id = item.Id })" role="button">
                                    <i class="fas fa-list"></i>
                                    Detalhes
                                </a>
                                <a class="btn btn-primary" href="@Url.Action("Edit", new { id = item.Id })" role="button">
                                    <i class="fas fa-pen"></i>
                                    Editar
                                </a>
                                <a class="btn btn-danger" href="@Url.Action("Delete", new { id = item.Id })" role="button">
                                    <i class="fas fa-times"></i>
                                    Excluir
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
