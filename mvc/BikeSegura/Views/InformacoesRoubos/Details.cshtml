@model BikeSegura.Models.InformacoesRoubos

@{
    ViewBag.Title = "Detalhes Roubo";
    Layout = "~/Views/Shared/_Usuario.cshtml";
}

<div class="container conteudo">
    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>
                        Cidade do Roubo
                    </th>
                    <th>
                        Estado do Roubo
                    </th>
                    <th>
                        Local Adicional
                    </th>
                    <th>
                        Marca
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Bicicletas.Modelo)
                    </th>
                    <th>
                        Informações sobre o roubo
                    </th>
                    <th>
                        Data do Roubo
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        @Html.DisplayFor(model => model.Cidade)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.Estado)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.LocalAdicional)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.Bicicletas.Marcas.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.Bicicletas.Modelo)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.Relato)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.DataRoubo)
                    </td>
                    <td>
                        <div class="btn" role="group">
                            @using (Html.BeginForm())
                            {
                                <a class="btn btn-success" href="@Url.Action("ListaUsuario", "InformacoesRoubos")" role="button">
                                    <i class="fas fa-reply"></i>
                                    Voltar
                                </a>
                                <a class="btn btn-primary" href="@Url.Action("Edit", "InformacoesRoubos", new { id = Model.Id })" role="button">
                                    <i class="fas fa-pen"></i>
                                    Editar
                                </a>
                            }
                        </div>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
