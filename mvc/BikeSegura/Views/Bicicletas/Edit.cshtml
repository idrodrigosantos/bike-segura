@model BikeSegura.Models.Bicicletas

@{
    ViewBag.Title = "Editar Bicicleta";
    Layout = "~/Views/Shared/_Usuario.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container conteudo">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        <div class="row">
            <div class="form-group col-sm-6">
                @Html.LabelFor(model => model.MarcasId, "Marcas (*)", htmlAttributes: new { @class = "control-label" })
                @Html.DropDownList("MarcasId", (SelectList)ViewBag.MyList, "Selecione Marca", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.MarcasId, "", new { @class = "text-danger" })
            </div>
            <div class="form-group col-sm-6">
                @Html.LabelFor(model => model.Modelo, "Modelo (*)", htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.Modelo, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Modelo, "", new { @class = "text-danger" })
            </div>
            <div class="form-group col-sm-6">
                @Html.LabelFor(model => model.TiposId, "Tipo da Bicicleta (*)", htmlAttributes: new { @class = "control-label" })
                @Html.DropDownList("TiposId", (SelectList)ViewBag.MyList, "Selecione Marca", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.TiposId, "", new { @class = "text-danger" })
            </div>
            <div class="form-group col-sm-6">
                @Html.LabelFor(model => model.Cor, "Cor (*)", htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.Cor, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Cor, "", new { @class = "text-danger" })
            </div>
            <div class="form-group col-sm-6">
                @Html.LabelFor(model => model.CambiosDianteirosId, htmlAttributes: new { @class = "control-label" })
                @Html.DropDownList("CambiosDianteirosId", (SelectList)ViewBag.MyList, "Selecione Marca", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CambiosDianteirosId, "", new { @class = "text-danger" })
            </div>
            <div class="form-group col-sm-6">
                @Html.LabelFor(model => model.CambiosTraseirosId, htmlAttributes: new { @class = "control-label" })
                @Html.DropDownList("CambiosTraseirosId", (SelectList)ViewBag.MyList, "Selecione Marca", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CambiosTraseirosId, "", new { @class = "text-danger" })
            </div>
            <div class="form-group col-sm-6">
                @Html.LabelFor(model => model.FreiosId, htmlAttributes: new { @class = "control-label" })
                @Html.DropDownList("FreiosId", (SelectList)ViewBag.MyList, "Selecione Marca", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.FreiosId, "", new { @class = "text-danger" })
            </div>
            <div class="form-group col-sm-6">
                @Html.LabelFor(model => model.SuspensoesId, htmlAttributes: new { @class = "control-label" })
                @Html.DropDownList("SuspensoesId", (SelectList)ViewBag.MyList, "Selecione Marca", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.SuspensoesId, "", new { @class = "text-danger" })
            </div>
            <div class="form-group col-sm-12 col-lg-4">
                @Html.LabelFor(model => model.QuadrosId, htmlAttributes: new { @class = "control-label" })
                @Html.DropDownList("QuadrosId", (SelectList)ViewBag.MyList, "Selecione Marca", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.QuadrosId, "", new { @class = "text-danger" })
            </div>
            <div class="form-group col-sm-6 col-lg-4">
                @Html.LabelFor(model => model.ArosId, htmlAttributes: new { @class = "control-label" })
                @Html.DropDownList("ArosId", (SelectList)ViewBag.MyList, "Selecione Marca", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ArosId, "", new { @class = "text-danger" })
            </div>
            <div class="form-group col-sm-6 col-lg-4">
                @Html.LabelFor(model => model.Tamanho, htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.Tamanho, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Tamanho, "", new { @class = "text-danger" })
            </div>
            <div class="form-group col-sm-12">
                @Html.LabelFor(model => model.Informacoes, htmlAttributes: new { @class = "control-label" })
                @Html.TextAreaFor(model => model.Informacoes, new { @class = "form-control", rows = "3" })
                @Html.ValidationMessageFor(model => model.Informacoes, "", new { @class = "text-danger" })
            </div>
            <div class="form-group col-sm-6">
                @Html.LabelFor(model => model.AlertaRoubo, "Alerta de Roubo (*)", htmlAttributes: new { @class = "control-label" })
                @Html.EnumDropDownListFor(model => model.AlertaRoubo, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.AlertaRoubo, "", new { @class = "text-danger" })
            </div>
            <div class="form-group col-sm-6">
                @Html.LabelFor(model => model.Vendendo, "Bicicleta à Venda (*)", htmlAttributes: new { @class = "control-label" })
                @Html.EnumDropDownListFor(model => model.Vendendo, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Vendendo, "", new { @class = "text-danger" })
            </div>            
            <div class="form-group col-sm-12">
                <div class="botao-salvar">
                    <a class="btn btn-danger" href="@Url.Action("DashboardUsuario", "Pessoas")" role="button">
                        <i class="fas fa-times"></i>
                        Cancelar
                    </a>
                    <button type="submit" value="Save" class="btn btn-success">
                        <i class="fas fa-save"></i>
                        Salvar
                    </button>
                </div>
            </div>
            <div class="form-group col-sm-12">
                <small class="form-text">
                    Campos marcados com (*) são obrigatórios
                </small>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
