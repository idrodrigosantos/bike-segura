@model IEnumerable<BikeSegura.Models.RelatosRoubos>

@{
    ViewBag.Title = "Lista de Relato de Roubos";
    Layout = "~/Views/Shared/_Administrador.cshtml";
}

<div class="container conteudo">
    <p>
        <a class="btn btn-success" href="@Url.Action("Create", "RelatosRoubos" )" role="button">
            <i class="fas fa-plus"></i>
            Relato de Roubo
        </a>
    </p>
    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>
                        Cidade do Relato
                    </th>
                    <th>
                        Estado do Relato
                    </th>
                    <th>
                        Local Adicional
                    </th>
                    <th>
                        Roubo
                    </th>
                    <th>
                        Relator
                    </th>
                    <th>
                        Relato
                    </th>
                    <th>
                        Data  do Relato
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Cidade)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Estado)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LocalAdicional)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.InformacoesRoubos.Relato)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Pessoas.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Relato)
                        </td>
                        <td>
                            @item.DataRelato.ToString("dd/MM/yyyy")
                        </td>
                        <td>
                            <div class="btn" role="group">
                                <a class="btn btn-success" href="@Url.Action("Details", new { id = item.Id })" role="button">
                                    <i class="fas fa-list"></i>
                                    Detalhes
                                </a>
                                <a class="btn btn-primary" href="@Url.Action("Edit", new { id = item.Id })" role="button">
                                    <i class="fas fa-pen"></i>
                                    Editar
                                </a>
                                <a class="btn btn-danger" href="@Url.Action("Delete", new { id = item.Id })" role="button">
                                    <i class="fas fa-times"></i>
                                    Excluir
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
