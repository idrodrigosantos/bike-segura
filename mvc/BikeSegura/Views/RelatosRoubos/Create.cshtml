@model BikeSegura.Models.RelatosRoubos

@{
    ViewBag.Title = "Relatar Roubo";
    Layout = "~/Views/Shared/_Usuario.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container conteudo">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="row">
            <div class="form-group col-sm-6">
                @Html.LabelFor(model => model.Local, htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.Local, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Local, "", new { @class = "text-danger" })
            </div>
            <div class="form-group col-sm-6">
                @Html.LabelFor(model => model.Data, htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.Data, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Data, "", new { @class = "text-danger" })
            </div>
            <div class="form-group col-sm-6">
                @Html.LabelFor(model => model.PessoasId, "Relator", htmlAttributes: new { @class = "control-label" })
                @Html.DropDownList("PessoasId", (SelectList)ViewBag.MyList, "Selecione Relator", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.PessoasId, "", new { @class = "text-danger" })
            </div>
            <div class="form-group col-sm-6">
                @Html.LabelFor(model => model.InformacoesRoubosId, "Roubo", htmlAttributes: new { @class = "control-label" })
                @Html.DropDownList("InformacoesRoubosId", (SelectList)ViewBag.MyList, "Selecione Roubo", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.InformacoesRoubosId, "", new { @class = "text-danger" })
            </div>
            <div class="form-group col-sm-12">
                @Html.LabelFor(model => model.Relato, htmlAttributes: new { @class = "control-label" })
                @Html.TextAreaFor(model => model.Relato, new { @class = "form-control", rows = "3" })
                @Html.ValidationMessageFor(model => model.Relato, "", new { @class = "text-danger" })
            </div>
            <div class="form-group col-sm-12">
                <div class="botao-salvar">
                    <a class="btn btn-danger" href="@Url.Action("ListaUsuario", "RelatosRoubos")" role="button">
                        <i class="fas fa-times"></i>
                        Cancelar
                    </a>
                    <button type="submit" value="Create" class="btn btn-success">
                        <i class="fas fa-save"></i>
                        Cadastrar
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
