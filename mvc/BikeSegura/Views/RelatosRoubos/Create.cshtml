@model BikeSegura.Models.RelatosRoubos

@{
    ViewBag.Title = "Relatar Roubo";
    Layout = "~/Views/Shared/_Usuario.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container conteudo">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="row">
            <div class="form-group col-sm-6">
                @Html.LabelFor(model => model.InformacoesRoubosId, "Roubo (*)", htmlAttributes: new { @class = "control-label" })
                @Html.DropDownList("InformacoesRoubosId", (SelectList)ViewBag.MyList, "Selecione Roubo", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.InformacoesRoubosId, "", new { @class = "text-danger" })
            </div>
            <div class="form-group col-sm-6">
                @Html.LabelFor(model => model.DataRelato, "Data que a bicicleta roubada foi vista (*)", htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.DataRelato, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DataRelato, "", new { @class = "text-danger" })
            </div>
            <div class="form-group col-sm-6">
                @Html.LabelFor(model => model.Cidade, "Cidade onde a bicicleta roubada foi vista (*)", htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.Cidade, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Cidade, "", new { @class = "text-danger" })
            </div>
            <div class="form-group col-sm-6">
                @Html.LabelFor(model => model.Estado, "Estado onde a bicicleta roubada foi vista (*)", htmlAttributes: new { @class = "control-label" })
                @Html.EnumDropDownListFor(model => model.Estado, "Selecione Estado", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Estado, "", new { @class = "text-danger" })
            </div>
            <div class="form-group col-sm-12">
                @Html.LabelFor(model => model.LocalAdicional, "Informações adicionais do local onde a bicicleta roubada foi vista (*)", htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.LocalAdicional, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.LocalAdicional, "", new { @class = "text-danger" })
            </div>
            <div class="form-group col-sm-12">
                @Html.LabelFor(model => model.Relato, "Informações sobre a bicicleta roubada (*)", htmlAttributes: new { @class = "control-label" })
                @Html.TextAreaFor(model => model.Relato, new { @class = "form-control", rows = "3" })
                @Html.ValidationMessageFor(model => model.Relato, "", new { @class = "text-danger" })
            </div>
            <div class="form-group col-sm-12">
                <div class="botao-salvar">
                    <a class="btn btn-danger" href="@Url.Action("ListaUsuario", "RelatosRoubos")" role="button">
                        <i class="fas fa-times"></i>
                        Cancelar
                    </a>
                    <button type="submit" value="Create" class="btn btn-success">
                        <i class="fas fa-save"></i>
                        Salvar
                    </button>
                </div>
            </div>
            @*Campo não está sendo mostrado*@
            <div class="form-group" style="display:none;">
                @Html.LabelFor(model => model.PessoasId, htmlAttributes: new { @class = "control-label" })
                @Html.DropDownList("PessoasId", (SelectList)ViewBag.MyList, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.PessoasId, "", new { @class = "text-danger" })
            </div>
            @*Campo não está sendo mostrado*@
            <div class="form-group col-sm-12">
                <small class="form-text">
                    Campos marcados com (*) são obrigatórios
                </small>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
