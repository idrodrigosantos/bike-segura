@model BikeSegura.Models.RelatosRoubos

@{
    ViewBag.Title = "Detalhes Relato";
    Layout = "~/Views/Shared/_Usuario.cshtml";
}

<div class="container conteudo">
    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>
                        Cidade do Relato
                    </th>
                    <th>
                        Estado do Relato
                    </th>
                    <th>
                        Informações adicionais sobre o local
                    </th>
                    <th>
                        Roubo
                    </th>                    
                    <th>
                        Relator
                    </th>
                    <th>
                        Relato
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DataRelato)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        @Html.DisplayFor(model => model.Cidade)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.Estado)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.LocalAdicional)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.InformacoesRoubos.Relato)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.Pessoas.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.Relato)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.DataRelato)
                    </td>
                    <td>
                        <div class="btn" role="group">
                            @using (Html.BeginForm())
                            {
                                <a class="btn btn-success" href="@Url.Action("ListaUsuario", "RelatosRoubos")" role="button">
                                    <i class="fas fa-reply"></i>
                                    Voltar
                                </a>
                                <a class="btn btn-primary" href="@Url.Action("Edit", "RelatosRoubos", new { id = Model.Id })" role="button">
                                    <i class="fas fa-pen"></i>
                                    Editar
                                </a>
                            }
                        </div>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
